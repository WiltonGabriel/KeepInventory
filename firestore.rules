
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /blocos/{blocoId} {
      allow read, write: if isSignedIn();
    }

    match /setores/{setorId} {
      allow read, write: if isSignedIn();
    }

    match /salas/{salaId} {
      allow read, write: if isSignedIn();
    }

    match /patrimonios/{patrimonioId} {
      allow read, update, delete: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.name is string;
    }

    match /movimentacoes/{movimentacaoId} {
      allow read, create, delete: if isSignedIn();
      allow update: if false; // Garante imutabilidade do log
    }
  }
}
